<!-- Custom styles for this template -->
<link href="css/style.css" rel="stylesheet">
<link href="css/style-responsive.css" rel="stylesheet">

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-edit"></i> Update Filiere</h3>
        <!-- BASIC FORM VALIDATION -->
        <div class="row mt">
            <div class="col-lg-12">


                <div class="form-panel">
                    <br />
                    
                    <h4 style="margin-left:600px; color:violet"><i class="fa fa-edit"></i>Update niveau</h4>
                    <br />

                    <form role="form" class="form-horizontal style-form" method="post" enctype="multipart/form-data" asp-action="Editniveau">
                        <input type="hidden" asp-for="id_niv" />
                       
                        <div class="form-group has-feedbacks">
                            <label class="col-lg-2 control-label">Niveau Name</label>
                            <div class="col-lg-10">

                                <input asp-for="nom_niv" class="form-control" name="nom_niv" />
                                <span asp-validation-for="nom_niv" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-theme " id="btnUpload" style="background-color:violet;margin-left:400px; " type="submit">Update Niveau </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /form-panel -->
            </div>
            <!-- /col-lg-12 -->
        </div>

    </section>
    <!-- /wrapper -->
</section>

