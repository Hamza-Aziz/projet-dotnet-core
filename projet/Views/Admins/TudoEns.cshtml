@model IEnumerable<projet.Models.Enseignant>
@{
    Layout = "_LayoutAdmin";
}

<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<!--external css-->
<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<!-- Custom styles for this template -->
<link href="~/css/style.css" rel="stylesheet">
<link href="~/css/style-responsive.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/to-do.css">

<br /><br />
<section id="main-content">
    <br />

    <br />
    <div class="row mt">
        <div class="col-md-12">
            <section class="task-panel tasks-widget">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h5><i class="fa fa-tasks"></i> Modify Or Delete Teacher</h5>
                    </div>
                    <br>
                </div>
                <div class="panel-body">
                    <div class="task-content">
                   

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.nom)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.prenom)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.username)
                                    </th>
                                    <th>
                                        password
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.telephone)
                                    </th>
                                    <th>
                                        picture
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.nom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.prenom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mdp)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.telephone)
                                        </td>
                                        <td>
                                            
                                                  <img src="~/UploadImages/@Html.DisplayFor(modelItem => item.photo)"  style="width:40px;height:40px"  alt="@Html.DisplayFor(modelItem => item.photo)" />
                                        </td>
                                        <td>

                                            <button class="btn btn-primary btn-xs"><a asp-action="EditEns" asp-route-id="@item.Id"><i class="fa fa-pencil bg-primary"></i> </a></button>
                                            <button class="btn btn-danger btn-xs"> <a asp-action="DeleteEns" asp-route-id="@item.Id"><i class="fa fa-trash-o  bg-primary"></i></a></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                   
                </div>
            </section>
        </div>
    </div>



</section>

