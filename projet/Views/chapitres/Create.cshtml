@model projet.Models.chapitre

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutEnseignant.cshtml";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V5</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/css/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../images/bg-01.jpg');">
            @ViewBag.msg
            @Html.AntiForgeryToken()
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <span class="login100-form-title p-b-53">
                    Ajouter Un chapitre
                </span>
                <br /><br />    <br />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="p-t-31 p-b-9">

                        Type du chapitre
                    </div>
                    <div class="wrap-input100 validate-input">
                        @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "input100", @placeholder = "Type du module *" } })
                        @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Contenu du chapitre
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Rendez-Vous is required">
                        <label asp-for="contenu" class="control-label"></label>
                        <input asp-for="contenu" type="file" class="form-control" />
                        <span asp-validation-for="contenu" class="text-danger">
                            <span class="focus-input100"></span>
                        </span>
                    </div>


                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Date de depots
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Rendez-Vous is required">
                        @Html.EditorFor(model => model.date_depot, new { htmlAttributes = new { @class = "input100", @placeholder = "date de depot *" } })
                        @Html.ValidationMessageFor(model => model.date_depot, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Responsable
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Montant is required">
                        @Html.EditorFor(model => model.responsable, new { htmlAttributes = new { @class = "input100", @placeholder = "Contenu *" } })
                        @Html.ValidationMessageFor(model => model.responsable, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>
                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Module
                        </span>

                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Date is required">
                        <label asp-for="id_mod" class="control-label"></label>
                        <select asp-for="id_mod" class="form-control" asp-items="ViewBag.id_mod"></select>
                        <span class="focus-input100"></span>
                    </div>
                    <input type="submit" class="btn btn-info" value="Ajout">
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>

</body>
</html>
