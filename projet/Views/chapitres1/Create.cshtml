@model projet.ViewModels.ChapitreViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutEnseignant.cshtml";

}

<h2 style="margin-bottom:20px;color:cornflowerblue;">Ajouter des  chapitres</h2>
<div  style="margin-left:420px; width:900px;">
    <div class="row ">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Le titre de chapitre</label>
                    <input asp-for="type" class="form-control" />
                    <span asp-validation-for="type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label class="control-label">Le contenu de chapitre</label>
                        <div class="custom-file">
                            <input asp-for="contenuu" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="contenuu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label"> La date de depot</label>
                    <input asp-for="date_depot" type="date" class="form-control" />
                    <span asp-validation-for="date_depot" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Le responsable</label>
                    <input asp-for="responsable" class="form-control" />
                    <span asp-validation-for="responsable" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Le module</label>
                    <select asp-for="id_mod" class="form-control" asp-items="ViewBag.id_mod"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default  bg-dark text-white" />
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
